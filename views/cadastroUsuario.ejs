<body>
    <header class="container">
        <img src="/img/logo-viva-bem.jpeg" width="120" alt="Logo">
        <form action="">
                <input class="Busca-texto" type="text">
            </form>
        <nav>
          <a class="nav-link" href="">Login</a>
        </nav>
        <a href="./Carrinho.html">
        <img src="/img/vista-lateral-vazia-do-carrinho-de-compras.png" width="40" alt="Carrinho"></a>
      </header>  

      <main>
          <h1>Cadastro</h1>
          <div class="finalizarCompra">

            <section class="cadastroUsuario">
              <h2>Dados do Usuário</h2>
              <form action="">
                <label for="nome"> Nome</label>
                        <input type="text" size="76%"> 
                        <label for="cpf">CPF</label>
                        <input type="text">
                        <br>
                        <label for="email">E-mail</label>
                          <input type="email" size="40%">
                        <label for="celular">Telefone</label>
                          <input type="tel" size="17%">
                          <label for="dataNascimento">Data de Nascimento</label>
                        <input type="date">
                          <br>
                        <label for="senha">Crie uma senha</label>
                          <input type="password" size="40%">
                          <label for="senha">Confirme a senha</label>
                          <input type="password" size="40%">
              </form>
                  <hr>
            </section>
                                                
                    <section class="endereco">
                      <h2>Endereço</h2>
                      <form action="">
                        <label for="destinatario"> Destinatário</label>
                        <input type="text" size="50%"> 
                        <label for="cep">CEP</label>
                        <input type="text">
                        <br>
                        <label for="logradouro">Logradouro</label>
                          <input type="text" size="50%">
                        <label for="numero">Número</label>
                          <input type="text" size="2%">
                        <label for="complemento">Complemento</label>
                          <input type="text" size="8%">
                        <br>
                        <label for="bairro">Bairro</label>
                          <input type="text">
                        <label for="cidade">Cidade</label>
                          <input type="text">
                        <label for="estado">Estado</label>
                          <select name="estado" id="estado">
                            <option value="null"> </option>
                            <option value="ac">AC</option>
                            <option value="al">AL</option>
                            <option value="ap">AP</option>
                            <option value="am">AM</option>
                            <option value="ba">BA</option>
                            <option value="ce">CE</option>
                            <option value="es">ES</option>
                            <option value="go">GO</option>
                            <option value="ma">MA</option>
                            <option value="mt">MT</option>
                            <option value="ms">MS</option>
                            <option value="mg">MG</option>
                            <option value="pa">PA</option>
                            <option value="pb">PB</option>
                            <option value="pr">PR</option>
                            <option value="pe">PE</option>
                            <option value="piaui">PI</option>
                            <option value="rj">RJ</option>
                            <option value="rn">RN</option>
                            <option value="rs">RS</option>
                            <option value="ro">RO</option>
                            <option value="rr">RR</option>
                            <option value="sc">SC</option>
                            <option value="sp">SP</option>
                            <option value="se">SE</option>
                            <option value="to">TO</option>
                            <option value="df">DF</option>
                          </select>
                        <label for="pais">País</label>
                        <select name="pais" id="pais">
                          <option value="null"> </option>
                          <option value="brasil">BR</option>
                        </select>
                      </form>
                      <hr>
                    </section>
                    
               <button type="submit" class="continuar">Enviar cadastro</button>
          </div>       
                  
          
      </main>
      
